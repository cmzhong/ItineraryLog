CREATE TABLE city (
	_id serial NOT NULL,
	name varchar(255) NOT NULL,
	CONSTRAINT city_pk PRIMARY KEY (_id)
) WITH (
  OIDS=FALSE
);



CREATE TABLE activities (
	_id serial NOT NULL,
	name varchar(255) NOT NULL,
	city_id integer(255) NOT NULL,
	CONSTRAINT activities_pk PRIMARY KEY (_id)
) WITH (
  OIDS=FALSE
);



CREATE TABLE items (
	_id serial(255) NOT NULL,
	listitem varchar(255) NOT NULL,
	activities_id integer(255) NOT NULL,
	city_id integer(255) NOT NULL,
	CONSTRAINT items_pk PRIMARY KEY (_id)
) WITH (
  OIDS=FALSE
);




ALTER TABLE activities ADD CONSTRAINT activities_fk0 FOREIGN KEY (city_id) REFERENCES city(_id);

ALTER TABLE items ADD CONSTRAINT items_fk0 FOREIGN KEY (activities_id) REFERENCES activities(_id);
ALTER TABLE items ADD CONSTRAINT items_fk1 FOREIGN KEY (city_id) REFERENCES city(_id);
